@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8" />
<title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/bootstrap-css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/map")
    <script src="https://maps.googleapis.com/maps/api/js?callback=start"
            async defer></script>
    <script>
        function start() {
            google.maps.event.addDomListener(window, "load", initMap);
        }
    </script>
</head>
<body class="container">
    <header class="panel-heading">
        <nav class="navbar navbar-default">
            <ul id="menu" class="nav navbar-nav">
                <li class="active">@Html.ActionLink("Home", "Index", "Home")
            </ul> 
        </nav>
    </header>
    <section>
        <div class="col-xs-12" id="map" style="width: 100%;height: 400px;">
            <!--MAP-->
        </div>
        <div class="col-xs-12">
            <div class="center-block" style="margin-top: 15px;">
                <button class="btn btn-default" onclick="showAllMarkers()">Show all markers</button>
                <button class="btn btn-default" onclick="deleteAllMarkers()">Remove all markers</button>
            </div>
        </div>
    </section>
    <section>
        @RenderBody()
    
    </section>
    <footer class="panel-footer">
        
    </footer>
</body>
</html>